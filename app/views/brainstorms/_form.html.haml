= form_for @brainstorm do |f|
  - if @brainstorm.errors.any?
    #error_explanation
      %h2= "#{pluralize(@brainstorm.errors.count, "error")} prohibited this brainstorm from being saved:"
      %ul
        - @brainstorm.errors.full_messages.each do |msg|
          %li= msg

  .actions
    = f.submit 'Save'
